int countDistinctWayToClimbStair(long long n)
{
     if(n<0)
        {
            return 0;
        }
        else if(n==0)
        {
            return 1;
        }
        else {
            return (countDistinctWayToClimbStair(n-1)+countDistinctWayToClimbStair(n-2))%1000000007;
        }//  Write your code here.
}

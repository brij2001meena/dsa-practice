https://practice.geeksforgeeks.org/problems/minimize-the-heights3351/1



class Solution {
  public:
    int getMinDiff(int arr[], int n, int k) {
        sort(arr ,arr+n);
        int ans =arr[n-1]-arr[0];// initial diffenece
        for(int i = 0;i<n-1;i++)
        {
            int mina = min(arr[0]+k , arr[i+1]-k);// minmum kyahoga ya to iss pahle zeroth element me add krdo bo ya fir dusre partition ke minimum me se gata do bo hoga
            int maxa = max(arr[n-1]-k ,arr[i]+k); // max kya hoga ya to pahle partition ke max element ko bada do orr dure ke maximum mtlv last element ko gata do bo hoga max
            if(mina<0)
            continue;
            ans = min(ans , maxa-mina);
        }
        return ans;
        
    }
};
